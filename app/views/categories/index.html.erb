<% content_for :secondary_title do %>
  Categories
<% end %>

<% content_for :secondary_nav do %>
  <%= link_to "New", new_category_path %>
  <%= link_to "Back", :back %>
<% end %>

<table class="index-table">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th class="align-center">Titles</th>
  </tr>
  <% @categories.each do |category| %>
    <tr>
      <td><%= link_to category.name, category %></td>
      <td><%= category.description %></td>
      <td class="align-center"><%= category.titles.length %></td>
    </tr>
  <% end %>
</table>

