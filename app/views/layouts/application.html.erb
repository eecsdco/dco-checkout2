<!DOCTYPE html>
<html>
  <head>
    <title>DCO Checkout</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="wrapper">
      <%= render "layouts/header" %>
      <div id="body-wrapper">
        <% if content_for? :secondary_nav or content_for? :secondary_title %>
          <%= render "layouts/secondary_nav" do %>
            <%= yield %>
          <% end %>
        <% else %>
          <%= yield %>
        <% end %>
      </div>
      <%= render "layouts/footer" %>
    </div>
  </body>
</html>
