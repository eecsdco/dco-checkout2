<% content_for :secondary_title do %>
  <%= @category.name %>
<% end %>

<% content_for :secondary_description do %>
  <%= @category.description %>
<% end %>

<% content_for :secondary_nav do %>
  <% if administrator? %>
    <%= link_to 'New Title', new_title_path(category_id: @category) %>
    <% if params[:show_all] == "true" %>
      <%= link_to 'Hide Disabled Titles', titles_path(category_id: @category, show_all: nil) %>
    <% else %>
      <%= link_to 'Show Disabled Titles', titles_path(category_id: @category, show_all: true) %>
    <% end %>
  <% end %>
  <%= link_to 'Back', :back %>
<% end %>

<%= render "building_chooser" %>

<%= render "titles/table", titles: @titles,
    display: [:description, :checkout_link, :n_available, :loan_length] %>